@model ArticleDto
<section class="blog-posts">
    <div class="container">
        <div class="row" style="background-color:white">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb text-center">
                                        <img src="~/images/@Model.Image.FileName" style="width:100%; height:350px;object-fit:contain; margin-top:50px" alt="">
                                    </div>
                                    <div class="down-content">
                                        <a href="#"><h4>@Model.Title</h4></a>
                                        <ul class="post-info">
                                            <li>@Model.User.FirstName @Model.User.LastName</li>
                                            <li>@Model.CreatedDate.ToString("dd/MM/yyyy")</li>
                                            <li><i class="fa-solid fa-eye"></i> @Model.ViewCount</li>
                                        </ul>
                                        <p>
                                            @Model.Content
                                        </p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@Model.Category.Name</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
